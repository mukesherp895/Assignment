    <link href="~/vendor/assets/css/component.css" rel="stylesheet" type="text/css" />
    <link href="~/vendor/assets/css/style.css" rel="stylesheet" type="text/css" />
    <style>
        table.dataTable thead tr {
            background-color: darkblue;
            color: white;
        }

        .sweet-alert {
            z-index: 99999999999 !important;
        }

        .modal-header {
            background: darkblue !important;
            color: white !important;
            padding: 8px !important;
        }
    </style>
</head>

<body>
    <!-- Pre-loader start -->
    <div class="theme-loader">
        <div class="ball-scale">
            <div class='contain'>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
