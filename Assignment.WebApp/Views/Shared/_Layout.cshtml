    <link href="~/vendor/bowercomponents/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/vendor/assets/pages/data-table/css/buttons.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/vendor/assets/icon/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
