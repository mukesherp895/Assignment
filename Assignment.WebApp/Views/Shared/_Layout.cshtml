    <!-- Required Fremwork -->
    <link href="~/vendor/bowercomponents/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- feather Awesome -->
    <link href="~/vendor/assets/icon/feather/css/feather.css" rel="stylesheet" type="text/css" />
